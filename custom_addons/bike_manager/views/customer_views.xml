<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================= -->
    <!--   CLIENTS - DETAILS VIEW   -->
    <!-- ========================= -->

    <!-- Liste (Détails clients) -->
    <record id="view_bike_customer_tree_details" model="ir.ui.view">
        <field name="name">bike.customer.tree.details</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <list string="Détails clients">
                <field name="name" width="14"/>
                <field name="email" width="14"/>
                <field name="phone" width="14"/>
                <field name="street" width="14"/>
                <field name="zip" width="14"/>
                <field name="city" width="14"/>
                <field name="country_id" width="14"/>
            </list>
        </field>
    </record>

    <!-- Form (Détails clients) -->
    <record id="view_bike_customer_form_details" model="ir.ui.view">
        <field name="name">bike.customer.form.details</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group string="Identité">
                        <field name="first_name" required="1" placeholder="Ex: Michal"/>
                        <field name="last_name" required="1" placeholder="Ex: Kwiatkowski"/>
                    </group>

                    <group string="Contact">
                        <field name="email" required="1" placeholder="exemple@mail.com"/>
                        <field name="phone" required="1" placeholder="+32 ..."/>
                        <field name="mobile" placeholder="Numéro mobile (optionnel)"/>
                    </group>

                    <group string="Adresse">
                        <field name="street" required="1" placeholder="Rue et numéro"/>
                        <field name="street2" placeholder="Boîte / étage (optionnel)"/>
                        <field name="zip" required="1" placeholder="1000"/>
                        <field name="city" required="1" placeholder="Bruxelles"/>
                        <field name="country_id" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action - Détails -->
    <record id="action_bike_customer_details" model="ir.actions.act_window">
        <field name="name">Détails clients</field>
        <field name="res_model">bike.customer</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_bike_customer_tree_details')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_bike_customer_form_details')})
        ]"/>
    </record>

    <!-- ========================= -->
    <!--   CLIENTS - STATS VIEW    -->
    <!-- ========================= -->

    <!-- Liste (Stats clients) -->
    <record id="view_bike_customer_tree_stats" model="ir.ui.view">
        <field name="name">bike.customer.tree.stats</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <list string="Statistiques clients">
                <field name="name" width="20"/>
                <field name="sale_count" width="20"/>
                <field name="rental_count" width="20"/>
                <field name="total_sales_amount" width="20"/>
                <field name="total_rental_amount" width="20"/>
            </list>
        </field>
    </record>


    <!-- Form (Stats clients) -->
    <record id="view_bike_customer_form_stats" model="ir.ui.view">
        <field name="name">bike.customer.form.stats</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <form string="Statistiques client">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group string="Identité">
                        <field name="first_name" readonly="1"/>
                        <field name="last_name" readonly="1"/>
                    </group>

                    <group string="Statistiques">
                        <field name="sale_count" readonly="1"/>
                        <field name="rental_count" readonly="1"/>
                        <field name="total_sales_amount" readonly="1"/>
                        <field name="total_rental_amount" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action - Stats -->
    <record id="action_bike_customer_stats" model="ir.actions.act_window">
        <field name="name">Statistiques clients</field>
        <field name="res_model">bike.customer</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_bike_customer_tree_stats')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_bike_customer_form_stats')})
        ]"/>
    </record>

</odoo>
