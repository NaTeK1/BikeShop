<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Customer Tree View -->
    <record id="view_bike_customer_tree" model="ir.ui.view">
        <field name="name">bike.customer.tree</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <list string="Customers">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="city"/>
                <field name="sale_count"/>
                <field name="rental_count"/>
                <field name="total_sales_amount"/>
            </list>
        </field>
    </record>

    <!-- Customer Form View -->
    <record id="view_bike_customer_form" model="ir.ui.view">
        <field name="name">bike.customer.form</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <sheet>
                    <group>
                        <group string="Contact Information">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                        </group>
                        <group string="Additional Information">
                            <field name="birth_date"/>
                            <field name="id_number"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <group string="Address">
                        <group>
                            <field name="street"/>
                            <field name="street2"/>
                        </group>
                        <group>
                            <field name="city"/>
                            <field name="zip_code"/>
                            <field name="country_id"/>
                        </group>
                    </group>

                    <group string="Statistics">
                        <group>
                            <field name="total_sales_amount"/>
                        </group>
                        <group>
                            <field name="total_rental_amount"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Sales History" name="sales">
                            <field name="sale_order_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="total_amount"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Rental History" name="rentals">
                            <field name="rental_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="total_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Customer notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Customer Search View -->
    <record id="view_bike_customer_search" model="ir.ui.view">
        <field name="name">bike.customer.search</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <search string="Customers">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="city"/>
            </search>
        </field>
    </record>

    <!-- Customer Action -->
    <record id="action_bike_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">bike.customer</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bike_customer_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer
            </p>
            <p>
                Track customer information and their purchase/rental history.
            </p>
        </field>
    </record>

</odoo>
