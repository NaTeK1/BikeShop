<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================= -->
    <!--   CLIENTS - DETAIL VIEW   -->
    <!-- ========================= -->

    <!-- Vue liste (Détail client) -->
    <record id="view_bike_customer_tree_detail" model="ir.ui.view">
        <field name="name">bike.customer.tree.detail</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <list string="Détail client">
                <field name="name" width="14"/>
                <field name="email" width="14"/>
                <field name="phone" width="14"/>
                <field name="street" width="14"/>
                <field name="zip" width="14"/>
                <field name="city" width="14"/>
                <field name="country_id" width="14"/>
            </list>
        </field>
    </record>

    <!-- Formulaire (Nouveau / Détail client) : STRUCTURÉ + champs obligatoires visibles -->
    <record id="view_bike_customer_form_detail" model="ir.ui.view">
        <field name="name">bike.customer.form.detail</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>

                    <div class="oe_title" invisible="not name">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>


                    <!-- Obligatoire : Prénom, Nom, Email, Téléphone, Rue, Code postal, Ville, Pays -->
                    <group string="Identité">
                        <field name="first_name" required="1" placeholder="Ex: Michal"/>
                        <field name="last_name" required="1" placeholder="Ex: Kwiatkowski"/>
                    </group>

                    <group string="Contact">
                        <field name="email" required="1" placeholder="exemple@mail.com"/>
                        <field name="phone" required="1" placeholder="+32 ..."/>
                        <field name="mobile" placeholder="Numéro mobile (optionnel)"/>
                    </group>

                    <group string="Adresse">
                        <field name="street" required="1" placeholder="Rue et numéro"/>
                        <field name="street2" placeholder="Boîte / étage (optionnel)"/>
                        <field name="zip" required="1" placeholder="1000"/>
                        <field name="city" required="1" placeholder="Bruxelles"/>
                        <field name="country_id" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Recherche -->
    <record id="view_bike_customer_search" model="ir.ui.view">
        <field name="name">bike.customer.search</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <search string="Clients">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="city"/>
                <field name="country_id"/>
            </search>
        </field>
    </record>

    <!-- Action - Détail client -->
    <record id="action_bike_customer" model="ir.actions.act_window">
        <field name="name">Détails clients</field>
        <field name="res_model">bike.customer</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bike_customer_search"/>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_bike_customer_tree_detail')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_bike_customer_form_detail')})
        ]"/>
    </record>


    <!-- ========================= -->
    <!--   CLIENTS - STATS TABLE   -->
    <!-- ========================= -->

    <!-- Tableau stats : Nom + nb ventes + nb locations + total ventes + total locations -->
    <record id="view_bike_customer_tree_stats" model="ir.ui.view">
        <field name="name">bike.customer.tree.stats</field>
        <field name="model">bike.customer</field>
        <field name="arch" type="xml">
            <list string="Statistiques clients" create="0" edit="0" delete="0">
                <field name="name" width="20"/>
                <field name="sale_count" width="20"/>
                <field name="rental_count" width="20"/>
                <field name="total_sales_amount" width="20"/>
                <field name="total_rental_amount" width="20"/>
            </list>
        </field>
    </record>

    <!-- Action - Statistiques clients (LIST uniquement) -->
    <record id="action_bike_customer_stats" model="ir.actions.act_window">
        <field name="name">Statistiques clients</field>
        <field name="res_model">bike.customer</field>
        <field name="view_mode">list</field>
        <field name="search_view_id" ref="view_bike_customer_search"/>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_bike_customer_tree_stats')})
        ]"/>
    </record>

</odoo>
