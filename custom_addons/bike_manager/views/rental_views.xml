<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Rental Tree View -->
    <record id="view_bike_rental_tree" model="ir.ui.view">
        <field name="name">bike.rental.tree</field>
        <field name="model">bike.rental</field>
        <field name="arch" type="xml">
            <list string="Rentals" decoration-info="state=='draft'"
                  decoration-warning="state=='ongoing'"
                  decoration-success="state=='returned'"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="pricing_type"/>
                <field name="total_amount"/>
                <field name="state"/>
                <field name="is_paid"/>
            </list>
        </field>
    </record>

    <!-- Rental Form View -->
    <record id="view_bike_rental_form" model="ir.ui.view">
        <field name="name">bike.rental.form</field>
        <field name="model">bike.rental</field>
        <field name="arch" type="xml">
            <form string="Rental">
                <header>
                    <button name="action_start_rental" string="Start Rental" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_return_bike" string="Return Bike" type="object"
                            class="oe_highlight" invisible="state != 'ongoing'"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object"
                            class="btn-primary" invisible="invoice_id or state not in ['ongoing', 'returned']"/>
                    <button name="action_create_calendar_event" string="Add to Calendar" type="object"
                            invisible="calendar_event_id"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state not in ['draft', 'ongoing']"/>
                    <button name="action_set_draft" string="Set to Draft" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ongoing,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id" readonly="state != 'draft'"/>
                            <field name="product_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="pricing_type" readonly="state != 'draft'"/>
                            <field name="unit_price"/>
                        </group>
                    </group>

                    <group string="Rental Period">
                        <group>
                            <field name="start_date" readonly="state not in ['draft']"/>
                            <field name="end_date" readonly="state not in ['draft']"/>
                        </group>
                        <group>
                            <field name="duration"/>
                            <field name="actual_return_date" invisible="state != 'returned'"/>
                        </group>
                    </group>

                    <group string="Pricing">
                        <group>
                            <field name="total_price"/>
                            <field name="deposit_amount"/>
                            <field name="additional_charges"/>
                        </group>
                        <group>
                            <field name="total_amount" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>

                    <group string="Payment">
                        <group>
                            <field name="payment_method"/>
                            <field name="is_paid"/>
                        </group>
                        <group>
                            <field name="deposit_returned" invisible="state != 'returned'"/>
                        </group>
                    </group>

                    <group string="Integration" invisible="not invoice_id and not calendar_event_id">
                        <group>
                            <field name="invoice_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="calendar_event_id" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Conditions" name="conditions">
                            <group>
                                <field name="condition_on_pickup" placeholder="Describe bike condition on pickup..."/>
                                <field name="condition_on_return" placeholder="Describe bike condition on return..."
                                       invisible="state not in ['returned']"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Rental notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Rental Calendar View -->
    <record id="view_bike_rental_calendar" model="ir.ui.view">
        <field name="name">bike.rental.calendar</field>
        <field name="model">bike.rental</field>
        <field name="arch" type="xml">
            <calendar string="Rentals" date_start="start_date" date_stop="end_date"
                      color="product_id" mode="month">
                <field name="customer_id"/>
                <field name="product_id"/>
            </calendar>
        </field>
    </record>

    <!-- Rental Search View -->
    <record id="view_bike_rental_search" model="ir.ui.view">
        <field name="name">bike.rental.search</field>
        <field name="model">bike.rental</field>
        <field name="arch" type="xml">
            <search string="Rentals">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <filter name="filter_ongoing" string="Ongoing" domain="[('state','=','ongoing')]"/>
                <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="filter_returned" string="Returned" domain="[('state','=','returned')]"/>
                <separator/>
                <filter name="filter_unpaid" string="Unpaid" domain="[('is_paid','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="Status" context="{'group_by':'state'}"/>
                    <filter name="group_customer" string="Customer" context="{'group_by':'customer_id'}"/>
                    <filter name="group_product" string="Product" context="{'group_by':'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Rental Action -->
    <record id="action_bike_rental" model="ir.actions.act_window">
        <field name="name">Rentals</field>
        <field name="res_model">bike.rental</field>
        <field name="view_mode">list,form,calendar</field>
        <field name="search_view_id" ref="view_bike_rental_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first rental
            </p>
            <p>
                Manage bike rentals with pricing, availability, and contracts.
            </p>
        </field>
    </record>

</odoo>
