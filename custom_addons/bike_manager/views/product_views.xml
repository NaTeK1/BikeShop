<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Product Tree View -->
    <record id="view_bike_product_tree" model="ir.ui.view">
        <field name="name">bike.product.tree</field>
        <field name="model">bike.product</field>
        <field name="arch" type="xml">
            <list string="Products">
                <field name="reference"/>
                <field name="name"/>
                <field name="product_type"/>
                <field name="category_id"/>
                <field name="sale_price"/>
                <field name="stock_quantity"/>
                <field name="available_quantity"/>
                <field name="state" decoration-success="state=='available'"
                       decoration-warning="state=='rented'"
                       decoration-danger="state=='sold'"/>
            </list>
        </field>
    </record>

    <!-- Product Form View -->
    <record id="view_bike_product_form" model="ir.ui.view">
        <field name="name">bike.product.form</field>
        <field name="model">bike.product</field>
        <field name="arch" type="xml">
            <form string="Product">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="reference"/>
                            <field name="product_type"/>
                            <field name="category_id"/>
                            <field name="bike_model_id" invisible="product_type != 'bike'"/>
                        </group>
                        <group string="Stock &amp; Pricing">
                            <field name="sale_price"/>
                            <field name="cost_price"/>
                            <field name="stock_quantity"/>
                            <field name="reserved_quantity"/>
                            <field name="available_quantity"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Product description..."/>
                    </group>

                    <notebook>
                        <page string="Rental Information" name="rental_info">
                            <group>
                                <group>
                                    <field name="can_be_rented"/>
                                </group>
                            </group>
                            <group string="Rental Pricing" invisible="not can_be_rented">
                                <group>
                                    <field name="rental_price_hourly"/>
                                    <field name="rental_price_daily"/>
                                </group>
                                <group>
                                    <field name="rental_price_weekly"/>
                                    <field name="rental_price_monthly"/>
                                </group>
                            </group>
                        </page>
                        <page string="Rental History" name="rental_history" invisible="not can_be_rented">
                            <field name="rental_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="total_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Kanban View -->
    <record id="view_bike_product_kanban" model="ir.ui.view">
        <field name="name">bike.product.kanban</field>
        <field name="model">bike.product</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="reference"/>
                <field name="sale_price"/>
                <field name="stock_quantity"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong><field name="name"/></strong>
                                <div>Ref: <field name="reference"/></div>
                                <div>Price: <field name="sale_price"/> â‚¬</div>
                                <div>Stock: <field name="stock_quantity"/></div>
                                <div>
                                    <span t-att-class="'badge badge-pill badge-' + (record.state.raw_value === 'available' ? 'success' : record.state.raw_value === 'rented' ? 'warning' : 'danger')">
                                        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Product Search View -->
    <record id="view_bike_product_search" model="ir.ui.view">
        <field name="name">bike.product.search</field>
        <field name="model">bike.product</field>
        <field name="arch" type="xml">
            <search string="Products">
                <field name="name"/>
                <field name="reference"/>
                <field name="category_id"/>
            </search>
        </field>
    </record>

    <!-- Product Action -->
    <record id="action_bike_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">bike.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_bike_product_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first product
            </p>
            <p>
                Products can be bikes, accessories, or spare parts.
            </p>
        </field>
    </record>

</odoo>
