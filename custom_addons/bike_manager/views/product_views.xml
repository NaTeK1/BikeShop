<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vue liste Produits -->
    <record id="view_bike_product_tree" model="ir.ui.view">
        <field name="name">bike.product.list</field>
        <field name="model">bike.product</field>
        <field name="arch" type="xml">
            <list string="Produits">
                <field name="reference" groups="bike_manager.group_bike_manager"/>
                <field name="name"/>
                <field name="product_type"/>
                <field name="category_id"/>
                <field name="sale_price"/>
                <field name="stock_quantity" groups="bike_manager.group_bike_manager"/>
                <field name="reserved_quantity" groups="bike_manager.group_bike_manager"/>
                <field name="available_quantity" groups="bike_manager.group_bike_manager"/>
                <field name="state" groups="bike_manager.group_bike_manager"/>
                <field name="active" groups="bike_manager.group_bike_manager"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire Produit (Modifiable pour Administrateurs) -->
    <record id="view_bike_product_form_editable" model="ir.ui.view">
        <field name="name">bike.product.form.editable</field>
        <field name="model">bike.product</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Produit">
                <header>
                    <field name="state" widget="statusbar" groups="bike_manager.group_bike_manager"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nom du produit"/></h1>
                    </div>

                    <group>
                        <group string="Informations de base">
                            <field name="reference" groups="bike_manager.group_bike_manager"/>
                            <field name="product_type" readonly="1" force_save="1"/>
                            <field name="category_id"
                                   domain="[('name', 'not in', ['Accessoires', 'Pièces'])]"
                                   invisible="product_type in ['accessory', 'part']"
                                   options="{'no_create': False, 'no_create_edit': False}"/>
                            <field name="category_id"
                                   domain="[('name', 'in', ['Accessoires', 'Pièces'])]"
                                   invisible="product_type == 'bike'"
                                   options="{'no_create': False, 'no_create_edit': False}"/>
                            <field name="bike_model_id" invisible="product_type != 'bike'"
                                   options="{'no_create': False, 'no_create_edit': False}"/>
                            <field name="image_1920" widget="image" class="oe_avatar"
                                   options="{'preview_image': 'image_1920'}"/>
                        </group>

                        <group string="Stock et prix">
                            <field name="sale_price"/>
                            <field name="stock_quantity" groups="bike_manager.group_bike_manager"/>
                            <field name="reserved_quantity" readonly="1" groups="bike_manager.group_bike_manager"/>
                            <field name="available_quantity" readonly="1" groups="bike_manager.group_bike_manager"/>
                            <field name="active" groups="bike_manager.group_bike_manager"/>
                        </group>
                    </group>

                    <separator string="Description" style="margin-top: 16px;"/>
                    <div style="padding: 16px; background: #f9f9f9; border-radius: 4px; margin: 8px 0;">
                        <field name="description" nolabel="1" placeholder="Description du produit..." widget="text"/>
                    </div>

                    <notebook>
                        <page string="Informations de location" name="rental_info">
                            <group>
                                <field name="can_be_rented"/>
                            </group>
                            <group invisible="not can_be_rented">
                                <group string="Tarifs">
                                    <field name="rental_price_hourly"/>
                                    <field name="rental_price_daily"/>
                                    <field name="rental_price_weekly"/>
                                    <field name="rental_price_monthly"/>
                                </group>
                            </group>
                        </page>

                        <page string="Vélos" name="bike_items" invisible="product_type != 'bike'" groups="bike_manager.group_bike_manager">
                            <field name="bike_item_ids">
                                <list string="Vélos"
                                      decoration-success="status == 'available'"
                                      decoration-info="status == 'rented'"
                                      decoration-warning="status == 'maintenance'"
                                      decoration-muted="status == 'sold'">
                                    <field name="serial_number"/>
                                    <field name="usage_type"/>
                                    <field name="condition"/>
                                    <field name="status" widget="badge"/>
                                    <field name="location"/>
                                </list>
                            </field>
                        </page>

                        <page string="Historique des locations" name="rental_history" invisible="not can_be_rented" groups="bike_manager.group_bike_manager">
                            <field name="rental_ids">
                                <list string="Locations">
                                    <field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="total_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue kanban Produits -->
    <record id="view_bike_product_kanban" model="ir.ui.view">
        <field name="name">bike.product.kanban</field>
        <field name="model">bike.product</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="bike_model_id"/>
                <field name="sale_price"/>
                <field name="image_1920"/>
                <field name="category_id"/>

                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click d-flex flex-column" style="width: 260px; background: white; border: 1px solid #e0e0e0; border-radius: 4px; overflow: hidden;">
                            <!-- Image -->
                            <div class="text-center" style="width: 100%; height: 260px; display: flex; align-items: center; justify-content: center; background: #f8f8f8;">
                                <field name="image_1920" widget="image" options="{'size': [240, 240]}" style="object-fit: contain;"/>
                            </div>

                            <!-- Info produit -->
                            <div style="padding: 12px;">
                                <!-- Marque + Modèle -->
                                <div style="font-size: 14px; color: #666; margin-bottom: 4px;">
                                    <t t-if="record.bike_model_id.value">
                                        <field name="bike_model_id"/>
                                    </t>
                                    <t t-else="">
                                        <field name="name"/>
                                    </t>
                                </div>

                                <!-- Catégorie -->
                                <div style="font-size: 13px; color: #999; margin-bottom: 8px;">
                                    <field name="category_id"/>
                                </div>

                                <!-- Prix -->
                                <div class="fw-bold" style="font-size: 18px; color: #000;">
                                    <field name="sale_price"/> €
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Vue recherche Produits -->
    <record id="view_bike_product_search" model="ir.ui.view">
        <field name="name">bike.product.search</field>
        <field name="model">bike.product</field>
        <field name="arch" type="xml">
            <search string="Produits">
                <field name="name"/>
                <field name="reference" groups="bike_manager.group_bike_manager"/>
                <field name="category_id"/>
                <field name="product_type"/>
                <field name="state" groups="bike_manager.group_bike_manager"/>

                <!-- Panneau de recherche avec catégories -->
                <searchpanel>
                    <field name="category_id" icon="fa-tag" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Action Produits (tous) -->
    <record id="action_bike_product" model="ir.actions.act_window">
        <field name="name">Produits</field>
        <field name="res_model">bike.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_bike_product_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier produit
            </p>
            <p>
                Les produits peuvent être des vélos, des accessoires ou des pièces.
            </p>
        </field>
    </record>

    <!-- Action Vélos uniquement -->
    <record id="action_bike_catalog" model="ir.actions.act_window">
        <field name="name">Vélos</field>
        <field name="res_model">bike.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('product_type', '=', 'bike')]</field>
        <field name="context">{'default_product_type': 'bike'}</field>
        <field name="search_view_id" ref="view_bike_product_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un modèle de vélo
            </p>
            <p>
                Catalogue de vélos disponibles à la vente ou à la location.
            </p>
        </field>
    </record>

    <!-- Action Accessoires & Pièces uniquement -->
    <record id="action_bike_accessories" model="ir.actions.act_window">
        <field name="name">Accessoires &amp; Pièces détachées</field>
        <field name="res_model">bike.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('product_type', 'in', ['accessory', 'part'])]</field>
        <field name="context">{'default_product_type': 'accessory'}</field>
        <field name="search_view_id" ref="view_bike_product_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun accessoire disponible
            </p>
        </field>
    </record>

</odoo>
