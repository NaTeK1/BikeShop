<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Category Tree View -->
    <record id="view_bike_category_tree" model="ir.ui.view">
        <field name="name">bike.category.tree</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <list string="Product Categories">
                <field name="name"/>
                <field name="parent_id"/>
                <field name="product_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Category Form View -->
    <record id="view_bike_category_form" model="ir.ui.view">
        <field name="name">bike.category.form</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <form string="Product Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="product_count"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Category description..."/>
                    </group>
                    <notebook>
                        <page string="Products" name="products">
                            <field name="product_ids">
                                <list>
                                    <field name="reference"/>
                                    <field name="name"/>
                                    <field name="product_type"/>
                                    <field name="sale_price"/>
                                    <field name="stock_quantity"/>
                                </list>
                            </field>
                        </page>
                        <page string="Subcategories" name="subcategories">
                            <field name="child_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="product_count"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Category Action -->
    <record id="action_bike_category" model="ir.actions.act_window">
        <field name="name">Product Categories</field>
        <field name="res_model">bike.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first product category
            </p>
            <p>
                Categories help organize your products (bikes, accessories, parts).
            </p>
        </field>
    </record>

</odoo>
