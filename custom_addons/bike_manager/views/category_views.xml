<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vue liste Catégories -->
    <record id="view_bike_category_tree" model="ir.ui.view">
        <field name="name">bike.category.tree</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <list string="Catégories">
                <field name="name"/>
                <field name="product_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire Catégorie -->
    <record id="view_bike_category_form" model="ir.ui.view">
        <field name="name">bike.category.form</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <form string="Catégorie">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>

                    <group>
                        <group string="Informations">
                            <field name="active"/>
                        </group>
                        <group string="Statistiques">
                            <field name="product_count" readonly="1"/>
                        </group>
                    </group>

                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Description de la catégorie..."/>
                    </group>

                    <notebook>
                        <page string="Produits" name="products">
                            <field name="product_ids">
                                <list string="Produits">
                                    <field name="reference"/>
                                    <field name="name"/>
                                    <field name="product_type"/>
                                    <field name="sale_price"/>
                                    <field name="stock_quantity"/>
                                    <field name="state"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue kanban Catégories (style e-commerce) -->
    <record id="view_bike_category_kanban" model="ir.ui.view">
        <field name="name">bike.category.kanban</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="image_1920"/>
                <field name="product_count"/>

                <templates>
                    <t t-name="card">
                        <div class="d-flex flex-column align-items-center" style="width: 220px; padding: 20px; background: #f5f5f5; border-radius: 12px; cursor: pointer;">
                            <button name="action_view_products" type="object" class="btn btn-link w-100 text-decoration-none p-0">
                                <div class="mb-3" style="width: 180px; height: 180px; display: flex; align-items-center; justify-content: center; background: white; border-radius: 50%; overflow: hidden; padding: 10px;">
                                    <field name="image_1920" widget="image" class="img-fluid" style="max-width: 160px; max-height: 160px; object-fit: contain;"/>
                                </div>
                                <div class="text-center w-100">
                                    <div class="fw-bold text-dark" style="font-size: 18px;">
                                        <field name="name"/>
                                    </div>
                                </div>
                            </button>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue recherche Catégories -->
    <record id="view_bike_category_search" model="ir.ui.view">
        <field name="name">bike.category.search</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <search string="Catégories">
                <field name="name"/>
                <field name="active"/>
            </search>
        </field>
    </record>

    <!-- Action Catalogue vélos (pour le menu client) -->
    <record id="action_bike_category_catalog" model="ir.actions.act_window">
        <field name="name">Catalogue de vélos</field>
        <field name="res_model">bike.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('product_type', '=', 'bike'), ('category_id.name', 'not in', ['Accessoires', 'Pièces'])]</field>
        <field name="search_view_id" ref="view_bike_product_search"/>
        <field name="context">{'create': False, 'delete': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun vélo disponible
            </p>
        </field>
    </record>

    <!-- Action Catégories (pour la config) -->
    <record id="action_bike_category" model="ir.actions.act_window">
        <field name="name">Catégories</field>
        <field name="res_model">bike.category</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bike_category_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première catégorie
            </p>
            <p>
                Classez vos produits par catégories pour mieux les gérer et les filtrer.
            </p>
        </field>
    </record>

</odoo>
